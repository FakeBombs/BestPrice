import { useParams, Link } from 'react-router-dom';
import { vendors } from '@/data/mockData';

const VendorPage = () => {
  const { id, vendorSlug } = useParams<{ id: string; vendorSlug: string }>();
  const vendor = vendors.find(v => v.id === parseInt(id));

  const expectedSlug = vendor ? vendor.name.toLowerCase().replace(/ /g, '-') : '';

  // Return early if vendor is not found or slug does not match
  if (!vendor || vendorSlug !== expectedSlug) {
    return <div>Vendor not found!</div>;
  }

  return (
    <div>
      <h1>{vendor.name}</h1>
      <img src={vendor.logo} alt={`${vendor.name} logo`} />
      <p>Rating: {vendor.rating}</p>
    </div>
  );
};

export default VendorPage;
